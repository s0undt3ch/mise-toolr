#!/usr/bin/env bash
#MISE description="Run plugin tests - install and execute tool"
set -euo pipefail

mise plugin link --force toolr .
mise cache clear
mise install toolr@0.11.0

# Capture and display the output while also verifying it
output=$(mise exec "toolr@0.11.0" -- "toolr" --version)
echo "toolr output: $output"

if echo "$output" | grep -q '0.11.0'; then
    echo "✓ Tests passed"
else
    echo "✗ Test failed: expected version 0.11.0"
    exit 1
fi